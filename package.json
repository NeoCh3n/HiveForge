{
  "name": "hiveforge",
  "private": true,
  "type": "module",
  "scripts": {
    "demo": "NODE_OPTIONS=--experimental-strip-types node services/orchestrator/cli.ts demo run --issue examples/issue.json",
    "orchestrator": "NODE_OPTIONS=--experimental-strip-types node services/orchestrator/cli.ts orchestrator run",
    "agent:planner": "NODE_OPTIONS=--experimental-strip-types node agents/planner/agent.ts",
    "agent:implementer": "NODE_OPTIONS=--experimental-strip-types node agents/implementer/agent.ts",
    "agent:reviewer": "NODE_OPTIONS=--experimental-strip-types node agents/reviewer/agent.ts",
    "agent:integrator": "NODE_OPTIONS=--experimental-strip-types node agents/integrator/agent.ts",
    "stack": "HIVEFORGE_MAIL_BACKEND=${HIVEFORGE_MAIL_BACKEND:-filesystem} HIVEFORGE_MCP_BASE_URL=${HIVEFORGE_MCP_BASE_URL:-http://127.0.0.1:8765/mcp/} HIVEFORGE_MCP_AGENT_SCOPE=${HIVEFORGE_MCP_AGENT_SCOPE:-role} HIVEFORGE_MCP_PROJECT_KEY=${HIVEFORGE_MCP_PROJECT_KEY:-HiveForge-dev} NODE_OPTIONS=--experimental-strip-types node services/run/stack.ts",
    "stack:codex": "HIVEFORGE_MAIL_BACKEND=${HIVEFORGE_MAIL_BACKEND:-filesystem} HIVEFORGE_MCP_BASE_URL=${HIVEFORGE_MCP_BASE_URL:-http://127.0.0.1:8765/mcp/} HIVEFORGE_MCP_AGENT_SCOPE=${HIVEFORGE_MCP_AGENT_SCOPE:-role} HIVEFORGE_MCP_PROJECT_KEY=${HIVEFORGE_MCP_PROJECT_KEY:-HiveForge-dev} NODE_OPTIONS=--experimental-strip-types node services/run/codex-stack.ts",
    "stack:codex-agents": "HIVEFORGE_MAIL_BACKEND=${HIVEFORGE_MAIL_BACKEND:-filesystem} HIVEFORGE_MCP_BASE_URL=${HIVEFORGE_MCP_BASE_URL:-http://127.0.0.1:8765/mcp/} HIVEFORGE_MCP_AGENT_SCOPE=${HIVEFORGE_MCP_AGENT_SCOPE:-role} HIVEFORGE_MCP_PROJECT_KEY=${HIVEFORGE_MCP_PROJECT_KEY:-HiveForge-dev} NODE_OPTIONS=--experimental-strip-types node services/run/codex-agents-stack.ts",
    "ui": "NODE_OPTIONS=--experimental-strip-types node services/gateway/server.ts",
    "hf": "NODE_OPTIONS=--experimental-strip-types node services/hf/cli.ts",
    "agent:planner:codex": "NODE_OPTIONS=--experimental-strip-types node agents/planner/codex-agent.ts",
    "agent:implementer:codex": "NODE_OPTIONS=--experimental-strip-types node agents/implementer/codex-agent.ts",
    "agent:reviewer:codex": "NODE_OPTIONS=--experimental-strip-types node agents/reviewer/codex-agent.ts",
    "agent:integrator:codex": "NODE_OPTIONS=--experimental-strip-types node agents/integrator/codex-agent.ts",
    "codex:planner": "codex -C . -c ask_for_approval=never -c model_reasoning_effort=high \"HiveForge Planner Agent. Read AGENTS.md and agents/planner/CODEX_PROMPT.md.\"",
    "codex:implementer": "codex -C . -c ask_for_approval=never -c model_reasoning_effort=high \"HiveForge Implementer Agent. Read AGENTS.md and agents/implementer/CODEX_PROMPT.md.\"",
    "codex:reviewer": "codex -C . -c ask_for_approval=never -c model_reasoning_effort=high \"HiveForge Reviewer Agent. Read AGENTS.md and agents/reviewer/CODEX_PROMPT.md.\"",
    "codex:integrator": "codex -C . -c ask_for_approval=never -c model_reasoning_effort=high \"HiveForge Integrator Agent. Read AGENTS.md and agents/integrator/CODEX_PROMPT.md.\"",
    "test": "HIVEFORGE_MAIL_BACKEND=filesystem HIVEFORGE_DATA_ROOT=.hiveforge/test NODE_OPTIONS=--experimental-strip-types node --test tests/*.test.ts",
    "typecheck": "tsc -p tsconfig.json"
  },
  "devDependencies": {
    "beads-ui": "^0.9.1"
  }
}
